<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="dialogs.xsl" type="text/xsl"?>
<Dialog width="300" height="450">
	<title>Harbour Trade Settings</title>
	<contents>
		<TableLayout rows="6" cols="3">
			<colsize col="1" relative=".3"/>
			<colsize col="2" relative=".18"/>
			<colsize col="3" relative=".18"/>

			<cell row="1" col="1" valign="center" halign="center">
				<Paragraph style="messagebold" translatable="yes" halign="center">
				Product</Paragraph>
			</cell>
			<cell row="1" col="2" valign="center">
				<Paragraph style="messagebold" translatable="yes" halign="center">
				Buy</Paragraph>
			</cell>
			<cell row="1" col="3" valign="center">
				<Paragraph style="messagebold" translatable="yes" halign="center">
				Sell</Paragraph>
			</cell>

			<cell row="2" col="1">
				<Paragraph style="message" translatable="yes">
				Food</Paragraph>
			</cell>
			<cell row="2" col="2">
				<SwitchComponent name="BuyFood">
					<CheckButton name="green">
						<image src="images/gui/checkbox/checkbox.png"/>
						<image-checked src="images/gui/checkbox/checkbox_checked.png"/>
					</CheckButton>
					<CheckButton name="red">
						<image src="images/gui/checkbox/checkbox_red.png"/>
						<image-checked src="images/gui/checkbox/checkbox_red_checked.png"/>
					</CheckButton>
				</SwitchComponent>
			</cell>
			<cell row="2" col="3">
				<SwitchComponent name="SellFood">
					<CheckButton name="green">
						<image src="images/gui/checkbox/checkbox.png"/>
						<image-checked src="images/gui/checkbox/checkbox_checked.png"/>
					</CheckButton>
					<CheckButton name="red">
						<image src="images/gui/checkbox/checkbox_red.png"/>
						<image-checked src="images/gui/checkbox/checkbox_red_checked.png"/>
					</CheckButton>
				</SwitchComponent>
			</cell>
			<cell row="3" col="1">
				<Paragraph style="message" translatable="yes">
				Coal</Paragraph>
			</cell>
			<cell row="3" col="2">
				<SwitchComponent name="BuyCoal">
					<CheckButton name="green">
						<image src="images/gui/checkbox/checkbox.png"/>
						<image-checked src="images/gui/checkbox/checkbox_checked.png"/>
					</CheckButton>
					<CheckButton name="red">
						<image src="images/gui/checkbox/checkbox_red.png"/>
						<image-checked src="images/gui/checkbox/checkbox_red_checked.png"/>
					</CheckButton>
				</SwitchComponent>
			</cell>
			<cell row="3" col="3">
				<SwitchComponent name="SellCoal">

					</CheckButton>
					<CheckButton name="red">
						<image src="images/gui/checkbox/checkbox_red.png"/>
						<image-checked src="images/gui/checkbox/checkbox_red_checked.png"/>
					</CheckButton>
				</SwitchComponent>
			</cell>
		</TableLayout>
	</contents>
	<buttonbar>
		<TableLayout rows="1" cols="2">
			<cell row="1" col="1">
				<Button name="goto">
					<image src="images/gui/info/info.png"/>
				</Button>
			</cell>
			<cell row="1" col="2">
				<Button name="Apply">
					<image src="images/gui/dialogs/okaybutton.png"/>
				</Button>
			</cell>
		</TableLayout>
	</buttonbar>
</Dialog>
